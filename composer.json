{
	"name": "netforcews/sistema",
	"description": "NetForce Sistema by NetForce Framework",
	"keywords": ["framework", "laravel", "sistema"],
	"type": "project",
    "license": "GPL v.3",
    "authors": [
        {
            "name": "Bruno Gon√ßalves",
            "email": "bugotech@gmail.com"
        },
        {
            "name": "Leandro Piscke",
            "email": "piscke@gmail.com"
        }
    ],
	"require": {
		"laravel/framework": "5.0.*",
        "netforcews/framework": "dev-master"
	},
	"require-dev": {
		"phpunit/phpunit": "~4.0",
		"phpspec/phpspec": "~2.1",
        "barryvdh/laravel-ide-helper": "2.*"
    },
	"autoload": {
		"classmap": [
			"database"
		],
		"psr-4": {
			"Studio\\": "app/"
		}
	},
	"autoload-dev": {
		"classmap": [
			"tests/TestCase.php"
		]
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan clear-compiled",
            "php artisan optimize"
		],
		"post-update-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize"
		],
		"post-create-project-cmd": [
			"php -r \"copy('.env.example', '.env');\"",
			"php artisan key:generate"
		]
	},
	"config": {
		"preferred-install": "dist"
	}
}
